<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase x:Class="Template.Mobile.Views.BlankPage"
                       xmlns="http://xamarin.com/schemas/2014/forms"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:materialFrame="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame"
                       xmlns:viewModels="clr-namespace:Template.Mobile.ViewModels;assembly=Template.Mobile"
                       xmlns:views="clr-namespace:Template.Mobile.Views;assembly=Template.Mobile"
                       Title="{Binding [BlankPage_Title]}"
                       x:DataType="viewModels:BlankViewModel">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="16" Padding="16">
                <Label Style="{StaticResource TextBody}" Text="This is a blank page" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</views:ContentPageBase>